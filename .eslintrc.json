{
    "env": {
      "jest": true,
      "browser": true,
      "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      // допускает ++
      "no-plusplus": "off",
  
      // допускает вывод в консоль
      "no-console": "off",
  
      "no-return-assign": "off",
  
      "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
  
      // допускает знаки
      "no-mixed-operators": [
        "error",
        {
          "groups": [
            ["+", "*", "/", "%"],
            ["&", "|", "^", "~", "<<", ">>", ">>>"],
            ["==", "!=", "===", "!==", ">", ">=", "<", "<="],
            ["&&", "||"],
            ["in", "instanceof"]
          ],
          "allowSamePrecedence": true
        }
      ],
  
      // максимальная длина строки
      "max-len": ["error", { "code": 999 }]
    }
  }